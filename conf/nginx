server {
    listen 80;
    server_name cagnottesolidaire.totheweb.fr www.cagnottesolidaire.totheweb.fr;
    return 301 https://cagnottesolidaire.totheweb.fr$request_uri;
}

server {
    listen 443 ssl;
    server_name www.cagnottesolidaire.totheweb.fr;

    ssl_certificate     /etc/letsencrypt/live/cagnottesolidaire.totheweb.fr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/cagnottesolidaire.totheweb.fr/privkey.pem;

    return 301 https://cagnottesolidaire.totheweb.fr$request_uri;
}

server {
    listen 443 ssl;
    server_name cagnottesolidaire.totheweb.fr;

    ssl_certificate     /etc/letsencrypt/live/cagnottesolidaire.totheweb.fr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/cagnottesolidaire.totheweb.fr/privkey.pem;

    access_log  /var/log/nginx/cagnottesolidaire.log;
    error_log  /var/log/nginx/cagnottesolidaire.err;

    location /static/ {
        alias /var/www/cagnottesolidaire/static_dest/;
        expires 30d;
    }

    location /media/ {
        alias /var/www/cagnottesolidaire/media/;
        expires 30d;
    }

    location /.well-known {
        alias /var/www/letsencrypt/.well-known;
    }

    location / {
        proxy_pass http://127.0.0.1:8008;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
